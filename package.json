{
  "name": "golf-fantasy-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build-css": "postcss ./src/styles.css -o ./dist/styles.css",
    "release": "semantic-release",
    "prepare": "husky install",
    "firebase:emulate": "firebase emulators:start --only hosting",
    "firebase:deploy": "firebase deploy --only hosting",
    "dev:firebase": "npm run build && npm run firebase:emulate"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "chart.js": "^4.4.6",
    "date-fns": "^2.21.1",
    "date-fns-tz": "^2.0.0",
    "debounce": "^2.0.0",
    "dotenv": "^16.4.1",
    "downshift": "^8.3.1",
    "firebase": "^10.7.2",
    "firebaseui": "^6.1.0",
    "flowbite": "^2.2.1",
    "next": "15",
    "react": "^18",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18",
    "react-spinners": "^0.13.8",
    "react-tooltip": "^5.26.0",
    "unidecode": "^0.1.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "husky": "^8.0.0",
    "postcss": "^8",
    "semantic-release": "^23.0.0",
    "tailwindcss": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "./utils/husky/pre-commit.sh"
    }
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "staging",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
